#include <Wire.h>
#include <Adafruit_MotorShield.h>
#include <Servo.h>

Servo myservo;  // create servo object to control a servo
// twelve servo objects can be created on most boards

// Create the motor shield object with the default I2C address
Adafruit_MotorShield AFMS = Adafruit_MotorShield();
// Or, create it with a different I2C address (say for stacking)
// Adafruit_MotorShield AFMS = Adafruit_MotorShield(0x61);

// Connect a stepper motor with 200 steps per revolution (1.8 degree)
// to motor port #2 (M3 and M4)
Adafruit_StepperMotor *myMotor = AFMS.getStepper(200, 2);
Adafruit_StepperMotor *myMotor1 = AFMS.getStepper(200, 1);

int LED = 7;
int FLEX = A0;

int count = 0;
boolean start = false;
const int  ARDUINO1 = 6;
int ranAlready = false;


void setup() {
  Serial.begin(9600);           // set up Serial library at 9600 bps
  Serial.println("Stepper test!");
  myservo.attach(9);
  myservo.write(145);

  AFMS.begin();  // create with the default frequency 1.6KHz
  //AFMS.begin(1000);  // OR with a different frequency, say 1KHz

  myMotor->setSpeed(300);
  myMotor1->setSpeed(300);
  
  pinMode(LED, OUTPUT);
  pinMode(ARDUNO1, INPUT);
  
  digitalWrite(LED, LOW);

  

}


void loop() {

  if  (digitalRead (ARDUINO1) == HIGH ) {
    start = true;
  }
 Serial.println(start);
 

  

  if (start == true && ranAlready == false) {

    moveBall();

    int fVal = analogRead(FLEX);
    if (fVal > 90) {
      digitalWrite(LED, HIGH);
    }
    
    ranAlready = true;

  } // do the moving

  // check that the ball has hit the flex sensor
  int fVal = analogRead(FLEX);
  if (fVal > 90) {
    digitalWrite(LED, HIGH);
  }

  Serial.println(fVal);
  
}

void moveBall() {

  for (int i = 0; i < 380; i++) {
    myMotor1->step(2, BACKWARD, DOUBLE); //RIGHT
    myMotor->step(2, FORWARD, DOUBLE);
  }

  for (int i = 0; i < 405; i++) {
    myMotor->step(2, BACKWARD, DOUBLE); //DOWN
    myMotor1->step(2, BACKWARD, DOUBLE);
  }

  myservo.write(175);

  for (int i = 0; i < 425; i++) {
    myMotor->step(2, FORWARD, DOUBLE); //DOWN
    myMotor1->step(2, FORWARD, DOUBLE);
  }

  delay(200);

  for (int i = 0; i < 580; i++) {
    myMotor->step(2, BACKWARD, DOUBLE); //RIGHT
    myMotor1->step(2, FORWARD, DOUBLE);
  }
  myservo.write(145);
  delay(800);
  myservo.write(170);

  for (int i = 0; i < 10; i++) {
    myMotor->step(2, FORWARD, DOUBLE); //DOWN
    myMotor1->step(2, FORWARD, DOUBLE);
  }
}

